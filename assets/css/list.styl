@import 'nib'

@import '_base/variable'
@import '_base/layout'
@import '_base/button'

@import '_partial/header'

#post-list
  width 300px
  height 100%
  margin-top 50px
  background #fff
  box-shadow 0 0 10px rgba(0, 0, 0, 0.3)
  position fixed
  top 0
  bottom 0
  left 0
  form
    padding 15px
    position relative
    input
      border 1px solid color-border
      width 248px
      height 25px
      line-height 25px
      padding 0 10px